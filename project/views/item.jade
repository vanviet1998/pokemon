extends ./header.jade
block title
  title MANAGER POKEMON
block content
  .container
    .table-wrapper
      .table-title
        .row
          .col-sm-8
            input.form-control(id='tranght',type='hidden')
            h2
              | Item 
              b MANAGER
          .col-sm-6
            a.btn.btn-success(href='#addEmployeeModal', data-toggle='modal')
              i.material-icons 
              span Add New Item
      table#table.table.table-striped.table-hover.table-bordered
        thead
          tr
            th nameItem
            th imageItem
            th priceItem
            th Custom
        tbody
        if item
          each items in item
            tr
              td=items.nameItem
              td
                img(style='height: 50px;width: 50px;' src='../'+items.imageItem)
              td=items.priceItem
              td
                a#edit.edit(rel=items._id, href='#editEmployeeModal', title='Edit', data-toggle='modal')
                  i.material-icons 
                a#delete.delete(rel=items._id, href='#', title='Delete', data-toggle='modal')
                  i.material-icons 
  #editEmployeeModal.modal.fade
    .modal-dialog
      .modal-content
        form(method='post',action='/admin/item/edit',enctype='multipart/form-data')
          .modal-header
            h4.modal-title Edit Item
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          .modal-body
            .form-group
              label nameItem
              input.form-control(id='nameItem',name='nameItem',type='text', required='')
            input.form-control(id='id',name='id',type='hidden', required='')
            .form-group
              label imageItem
              input.form-control(id='image',name='anh',type='file', onchange="change(this)")
            .figure.showimg
              button(id='x' type='button') x
              <img id='blah' src="" class="img-rounded" alt="" width="300" height="236"> 
            .form-group
              label priceItem
              input.form-control(id='priceItem',name='priceItem',required='',type='text')
            .modal-footer
            input.btn.btn-default(type='button', data-dismiss='modal', value='Cancel')
            input.btn.btn-info(id='save', type='submit', value='Save')
  #addEmployeeModal.modal.fade
    .modal-dialog
      .modal-content
        form(method='post',action='/admin/item/save',enctype='multipart/form-data')
          .modal-header
            h4.modal-title Add Item
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          .modal-body
            .form-group
              label nameItem
              input.form-control(id='nameItem',name='nameItem',type='text', required='')
            input.form-control(id='id',name='id',type='hidden', required='')
            .form-group
              label imageItem
              input.form-control(id='imageItem',name='anh',type='file', required='', onchange="change1(this)")
            .figure.showimg1
              button(id='x1' type='button') x
              <img id='blah1' src="" class="img-rounded" alt="" width="300" height="236"> 
            .form-group
              label priceItem
              input.form-control(id='priceItem',name='priceItem',type='text', required='')
            .modal-footer
              input.btn.btn-default(type='button', data-dismiss='modal', value='Cancel')
              input.btn.btn-success(type='submit', value='Add')
  script(src="https://cdn.jsdelivr.net/npm/sweetalert2@8")
  script(type='text/javascript' src='/javascripts/adminitem.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js')
  